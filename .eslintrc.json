{
    "env": {
        "browser": true,
        "es2016": true,
        "jasmine":true
    },
    "extends": [
        "standard","plugin:jasmine/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint","jasmine"
    ],
    "ignorePatterns": ["dist/**/*.*","src/tests/**/*"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "comma-spacing":["warn",{"before":false,"after":true}],
        "arrow-spacing":"off",
        "import/no-unresolved":"off",
        "import/extensions":"off",
        "prefer-promise-reject-errors":"off",
        "comma-dangle":"off"
    }
}
